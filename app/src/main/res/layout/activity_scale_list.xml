<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:background="@drawable/pord"
    tools:context="com.bmniman.littleguitarians.Designs.ScaleList">


    <fragment
        android:id="@+id/defaultexer"
        android:name="com.bmniman.littleguitarians.Designs.Fragments.ScaleFragment"
        android:layout_width="match_parent"
        android:layout_height="172dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp" />




    <com.bhargavms.dotloader.DotLoader
        android:id="@+id/text_dot_loader"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:visibility="visible"
        app:color_array="@array/dot_colors"
        app:dot_radius="10dp"
        app:number_of_dots="3"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_dot_loader"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:text="Loading..." />

    <fragment
        android:id="@+id/fragment"
        android:name="com.bmniman.littleguitarians.Designs.Fragments.KeyFragment"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp" />
</android.widget.RelativeLayout>
